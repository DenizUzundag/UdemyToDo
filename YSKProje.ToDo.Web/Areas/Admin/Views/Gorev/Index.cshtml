@model List<GorevListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{

    <a asp-action="EkleGorev" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-plus-square mr-2"></i>Yeni görev </a>
    <table class="table table-sm table-hover">
        <tr>
            <th>Ad</th>
            <th>Aciklama</th>
            <th>Oluşturulma Tarih</th>
            <th>Aciliyet</th>
            <th>İşlem</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarihi.ToString("D")</td>
                <td>@item.Aciliyet.Tanim</td>
                <td>
                    <a asp-action="GuncelleGorev" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-pen-square mr-2"></i>Düzenle</a>
                    <a asp-action="SilGorev" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-times-circle mr-2"></i>Sil</a>

                </td>
            </tr>


        }
    </table>

}
else
{
    <div class="p-3 text-danger mt-3">
        <p class="lead">
            Herhangi bir görev bulunamadı
        </p>

        <a asp-action="EkleGorev" class="btn btn-info btn-sm">Bir Görev Oluştur</a>
    </div>
}
