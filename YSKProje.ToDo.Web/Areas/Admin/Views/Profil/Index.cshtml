@model AppUSerListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <span asp-validation-for="@Model.SurName" class="text-danger"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Şu an ki resminiz</h5>
                    <img src="~/img/@Model.Picture" class="w-100" style="height:10rem!important;" alt="@Model.Name" />
                </div>

            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important;">
                    <h5 class="text-center">Seçtiğiniz resim:</h5>
                    <img id="rsmOnizleme" src="" class="w-100" style="height:10rem!important;"/>
                </div>

            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-12">
                <label>Resim seç:</label>
                <input type="file" class="form-control-file" name="Resim" id="Resim" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm mt-2"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

@section JavaScript{ 

<script type="text/javascript">
    $(document).ready(function () {
        $("#Resim").change(function (e) {
            console.log("merhaba");
            $("#alanOnizleme").show();
            $("#rsmOnizleme").attr('src', URL.createObjectURL(e.target.files[0]))
        })
    })

</script>

}