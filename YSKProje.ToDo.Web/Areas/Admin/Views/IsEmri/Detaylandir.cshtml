@model GorevListAllViewModel
@{
    ViewData["Title"] = "Detaylandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if(Model.Raporlar.Count>0)
{
    <a class="btn btn-info mt-2">Excelde Görüntüle</a>
    <table class="table table-hover table-sm mt-2 text-center table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname personelinizin @Model.Ad
            gorevine yazmışş olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanim</th>
            <th>Detay</th>
          
        </tr>

        @foreach (var rapor in Model.Raporlar)
	     {
            <tr>
                <td>@rapor.Tanim</td>
                <td>@rapor.Detay</td>
            </tr>
	 	 
	     }
    </table>

}
else
{
    <div class="borde border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname Personelimiz şuan da @Model.Ad
        gorevi üzerinde çalışıyor. Henüz bir apor yazmamış.
    </div>
}

