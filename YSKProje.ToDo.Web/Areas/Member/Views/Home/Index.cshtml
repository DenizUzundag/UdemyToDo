
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}
<div class="row mt-3">
    <div class="col-md-6">
        <div class="  card text-white text-center bg-primary mb-3">

            <div class="card-body">

                <h4 class="card-title">Rapor Sayısı</h4>
                @if (ViewBag.RaporSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.RaporSayisi</p>
                }
                else
                {
                    <p class="card-text lead">Herhangi bi rapor yazmamışsınız.</p>
                }


            </div>

        </div>

    </div>
    <div class="col-md-6">
        <div class="  card text-white text-center bg-primary mb-3">

            <div class="card-body">

                <h4 class="card-title">Tamamlanan Görev Sayısı</h4>
                @if (ViewBag.TamamlananGorevSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.TamamlananGorevSayisi</p>
                    <p class="">
                      <a asp-action="Index" asp-controller="Gorev" class="btn btn-light btn-sm"><i class="fas fa-chevron-circle-right mr-2"></i>İncele</a>

                    </p>


                }
                else
                {
                    <p class="card-text lead">Herhanagi bir görev tamamlamamışşınız</p>
                }
            </div>
        </div>

    </div>

</div>



